<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <AssemblyName>HyperCache.NET</AssemblyName>
    <PackageId>HyperCache.NET</PackageId>
    <Version>0.2.0</Version>
    <Authors>Brijesh</Authors>
    <Company>YourCompany</Company>
    <Description>High-performance in-memory cache for .NET 9 with TTL, LRU eviction, and metrics support</Description>
    <PackageTags>cache;memory;in-memory;dotnet;hypercache;LRU;OpenTelemetry</PackageTags>
    <RepositoryUrl>https://github.com/AbhayUpadhyayDev/HyperCache.NET</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.10" />
    <PackageReference Include="OpenTelemetry" Version="1.13.1" />
  </ItemGroup>

</Project>
